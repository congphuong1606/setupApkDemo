<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1e5efc2"
    android:orientation="vertical"
    android:layout_margin="1dp">
    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_cicle" />

        <TextView
            android:id="@+id/tv_id_chapter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/aa">

        <TextView
            android:id="@+id/tv_name_chapter"
            android:textColor="#020656"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="anh hùng xã điêu chinh chiến quanh năm"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>